<!DOCTYPE html>
<html>
<head>
  <title>EventThing</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class ="container" >
		<div class = "row" >
			<div class = "span10">
				<% if user_signed_in? %>
				  Signed in as
				  <%= link_to(current_user.first_name, user_path(current_user), :method => :get) %> |
				  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
				<%else%>
				  <%= link_to('Sign in', new_user_session_path) %>
				<% end %>
				<p class="notice"><%= flash[:notice] %></p>
				<p class="error"><%= flash[:error] %></p>
				
				<%= yield %>
			</div>
		</div>
	</div>

</body>
</html>
