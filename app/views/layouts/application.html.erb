<!DOCTYPE html>
<html>
<head>
  <title>Robostangs Outreach</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<style>
	body {
		margin-left: 5px;
		margin-right: 5px;
	}
</style>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<a class="brand">Robostangs</a>
			<div class="nav-collapse">
				<ul class="nav">
					<% if user_signed_in? %>
						<li><%= link_to("My Info", user_path(current_user), :method => :get) %></li>
						<!-- TODO: show number of new events -->
						<li><%= link_to("Outreach Events", events_path) %></li>
						<li><%= link_to("Meetings", meetings_path)%></li>
						<li><%= link_to("Logout", destroy_user_session_path, :method => :delete) %></li>
				<% else %>
					<li><%= link_to("Sign In", new_user_session_path) %></li>
				<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>
<div class ="container" >
	<div class = "row" >
		<div class = "span10">
			<%= render partial: "shared/flash_messages", flash: flash %>
		</div>
	</div>
</div>
	<div style="margin-left:auto; margin-right:auto" >
		<%= yield %>
	</div>

	<div style="position: fixed; bottom: 0; width:100%; text-align: right; color:#AAA;">Anakin Skywalker</div>
</body>
</html>
