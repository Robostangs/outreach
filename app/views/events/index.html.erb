<h2>Events</h2>
<ul class="pagination">
	<%= will_paginate @events, renderer: BootstrapPagination::Rails, bootstrap: 3 %>
</ul>
<table>
  <tr>
    <th>Title</th>
    <th>Event Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Credits</th>
		<th>Spots Left</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td class="event_title"><%= link_to event.title, event %></td>
    <td class="event_date"><%= event.event_date %></td>
    <td class="event_time"><%= event.start_time.strftime("%l:%m %p") %></td>
		<td class="event_time"><%= event.end_time.strftime("%l:%m %p") %></td>
    <td class="event_credits"><%= event.credits %>
		<td class="event_count"><%= event.slots_left %>/<%= event.max_slots %></td>
  </tr>
<% end %>
</table>

<br />

