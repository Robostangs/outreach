<h2>Events</h2>
<% if not params[:page].nil? %>
	Page <%= params[:page] %>
<% else %>
	Page 1
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
		<th>Spots Left</th>
    <th>Event date</th>
    <th>Signup expire</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td class="event_title"><%= link_to event.title, event %></td>
    <td><%= event.description %></td>
		<td class="event_count"><%= event.slots_left %>/<%= event.max_slots %></td>
    <td class="event_date"><%= event.event_date %></td>
    <td class="event_date"><%= event.signup_expire %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @events %>

